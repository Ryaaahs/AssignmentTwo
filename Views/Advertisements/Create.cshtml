@model EntityFramework.Models.ViewModels.FileInputViewModel
@{
    ViewData["Title"] = "Create Advertisement";
}

<h1>Upload</h1>

<h4>Upload an Advertisement for brokerage @Model.BrokerageTitle</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">

             <input type="hidden" id="BrokerageId" name="BrokerageId" value="@Model.BrokerageId">

            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="file" type="file">
                </div>
            </div>

            <div class="form-group">
                <button name="upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
