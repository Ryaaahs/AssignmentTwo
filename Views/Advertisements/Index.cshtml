@model EntityFramework.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Advertisements.Count() == 0)
{
    <p>There are no files to display.</p>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Advertisements.FirstOrDefault().FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advertisements.FirstOrDefault().Url)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Advertisements) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
               <img src="@item.Url" style="max-width: 400px;" />
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
