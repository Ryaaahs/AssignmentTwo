@model EntityFramework.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = @Model.Brokerage.Title + " Advertisements";
}

<h1>Show Ads for Brokerage @Model.Brokerage.Title</h1>

<div>
    <p>
        <a asp-action="Create" asp-route-id="@Model.Brokerage.Id">Upload New</a>
    </p>
</div>

<div>
    <p>
        <a asp-controller="Brokerages" asp-action="Index">Back to List</a>
    </p>
</div>

@if (Model.Advertisements.Count() == 0)
{
    <p>There are no files to display.</p>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Advertisements.FirstOrDefault().FileName)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Advertisements) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
               <img src="@item.Url" style="max-width: 400px; max-height: 250px;" />
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
