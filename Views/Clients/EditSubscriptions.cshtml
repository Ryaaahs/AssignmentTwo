@model EntityFramework.Models.ViewModels.ClientSubscriptionsViewModel

@{
    ViewData["Title"] = "Edit - " + @Model.Client.FirstName + " Subscriptions";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Edit</h1>

    <div>
        <h4>Client</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Full Name
            </dt>
            <dd class="col-sm-10">
                @Model.Client.FullName
            </dd>
        </dl>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Brokerage Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Subscriptions) {
                        <tr>
                            <td>
                                @item.Title
                            </td>
                            @if(@item.IsMember)
                            {
                                <td>
                                    <a asp-action="RemoveSubscription" asp-route-clientId="@Model.Client.Id" asp-route-brokerageId="@item.BrokerageId">Unregister</a>
                                </td>
                            } else
                            {
                                <td>
                                    <a asp-action="AddSubscription" asp-route-clientId="@Model.Client.Id" asp-route-brokerageId="@item.BrokerageId">Register</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table> 
