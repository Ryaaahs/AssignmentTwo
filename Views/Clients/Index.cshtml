@model EntityFramework.Models.ViewModels.ClientsBrokerageView

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clients.FirstOrDefault().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients.FirstOrDefault().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients.FirstOrDefault().BirthDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="EditSubscriptions" asp-route-id="@item.Id">Edit Subscriptions</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
<h3>Member of the following brokerages </h3>
@if(Model.CurrentClientBrokerages != null)
{
  <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CurrentClientBrokerages) {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
            }
        </tbody>
   </table>  
} else {
    <table class="table">
        <tbody>
            <tr>
                <th>
                    No subscription record exist 
                </th>
            </tr>
        </tbody>
   </table> 
}

